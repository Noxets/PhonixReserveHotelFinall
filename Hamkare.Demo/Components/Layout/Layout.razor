@using Hamkare.Utility.Extensions
@inherits LayoutComponentBase
<MudRTLProvider RightToLeft="@(Thread.CurrentThread.CurrentUICulture.IsRtl())">

    <MudThemeProvider Theme="_HamkareTheme"/>
    <MudDialogProvider/>
    <MudSnackbarProvider/>
    <MudPopoverProvider/>

    <MudLayout>

        <MudMainContent>

            <header>

                <MudAppBar>

                    <div class="d-lg-flex d-none">


                    </div>

                    <div class="d-flex d-lg-none">


                    </div>

                </MudAppBar>

                <MudDrawer bind-Open="ShowDrawer">

                </MudDrawer>

            </header>

            <main role="main">

                @Body

            </main>

            <footer>

            </footer>

        </MudMainContent>

    </MudLayout>

</MudRTLProvider>

@code{
    public bool ShowDrawer { get; set; }

    readonly MudTheme _HamkareTheme = new();
}